#!/usr/bin/env bash

TOUCHPAD_ID=$(xinput list | grep -i Touchpad | sed 's/.*id=\(.*\) *\[.*/\1/')

TAPPING_VALUE="0"
ACCEL_PROFILE_VALUE="1 0 0"
ACCEL_SPEED_VALUE="-0.160000"
NATURAL_SCROLLING_VALUE="0"
DISABLE_WHILE_TYPING_VALUE="1"

xinput set-prop $TOUCHPAD_ID "libinput Tapping Enabled" $TAPPING_VALUE
xinput set-prop $TOUCHPAD_ID "libinput Accel Profile Enabled" $ACCEL_PROFILE_VALUE
xinput set-prop $TOUCHPAD_ID "libinput Accel Speed" $ACCEL_SPEED_VALUE
xinput set-prop $TOUCHPAD_ID "libinput Natural Scrolling Enabled" $NATURAL_SCROLLING_VALUE
xinput set-prop $TOUCHPAD_ID "libinput Disable While Typing Enabled" $DISABLE_WHILE_TYPING_VALUE

notify-send -u normal -t 1500 "Touchpad settings updated"
