#!/usr/bin/env bash
set -e

require_vars XDG_CACHE_HOME

HISTORY_FILE="${HISTFILE:-"$XDG_CACHE_HOME/.bash_history"}"

count=$1

hist=""

if [[ $count == "max" ]]; then
  hist="$(cat $HISTORY_FILE)"
else
  c=1000
  if [[ $count =~ ^[0-9]+$ ]]; then
    c=$count
  fi

  hist="$(tail -$c $HISTORY_FILE)"
fi

selection=$(echo "$hist" | fzf -x +s -e --tac)

echo -n $selection | xclip -selection clipboard
