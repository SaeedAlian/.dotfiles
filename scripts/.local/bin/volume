#!/bin/bash

arg=$1
volup=0
voldown=0
volmute=0

case $arg in
  -u | --up)
    volup=1
    ;;
  -d | --down)
    voldown=1
    ;;
  -m | --mute)
    volmute=1
    ;;
  *)
    echo "Invalid option" >&2
    exit 1
    ;;
esac

if [ $volup == 1 ]; then
  pactl set-sink-volume @DEFAULT_SINK@ +5%
  exit 0
fi

if [ $voldown == 1 ]; then
  pactl set-sink-volume @DEFAULT_SINK@ -5%
  exit 0
fi

if [ $volmute == 1 ]; then
  pactl set-sink-mute @DEFAULT_SINK@ toggle
  exit 0
fi

echo "Invalid option" >&2
exit 1
