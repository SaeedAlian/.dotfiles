#!/bin/sh

run() {
  $HOME/.local/bin/toggle_bluetooth --off
  $HOME/.local/bin/toggle_touchscreen --off

  setxkbmap -layout us,ir -option 'grp:alt_shift_toggle'
  setxkbmap -option caps:none

  xset r rate 400 35
}

is_forced=false

if [ "$1" == "--force" ]; then
  run
  exit 0
fi

if [ ! -f "/tmp/startuplock" ]; then
  run
  touch "/tmp/startuplock"
fi
