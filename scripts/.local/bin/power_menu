#!/bin/sh

all=(shutdown reboot suspend logout lockscreen)
show=("${all[@]}")

declare -A texts
texts[lockscreen]="󰌾 Lock Screen"
texts[logout]="󰍃 Logout"
texts[suspend]="󰒲 Suspend"
texts[reboot]="󰜉 Reboot"
texts[shutdown]="󰐥 Shutdown"

declare -A actions
actions[lockscreen]="start_lockscreen"
actions[logout]="bspc quit"
actions[suspend]="suspend"
actions[reboot]="reboot"
actions[shutdown]="poweroff"

confirmations=(reboot shutdown logout)

ask_for_confirmation() {
  ans="$(echo -e "No\nYes" | rofi -dmenu -i -p "Are you sure??")"

  if [ "$ans" == "Yes" ]; then
    return 1
  else
    return 0
  fi
}

show_menu() {
  options=""

  for entry in "${all[@]}"; do
    text=${texts[$entry]}
    if [ -z "$options" ]; then
      options="$text"
    else
      options="$options\n$text"
    fi
  done
  options="$options\nExit"

  chosen="$(echo -e "$options" | rofi -dmenu -i -p "Power Menu")"

  if [ "$chosen" == "Exit" ] || [ -z "$chosen" ]; then
    exit 0
  fi

  chosen_entry=""

  for entry in "${all[@]}"; do
    text=${texts[$entry]}
    if [ "$text" == "$chosen" ]; then
      chosen_entry=$entry
    fi
  done

  if [ -z "$chosen_entry" ]; then
    exit 1
  fi

  action=${actions[$chosen_entry]}

  for c in "${confirmations[@]}"; do
    text=${texts[$c]}
    if [ "$text" == "$chosen" ]; then
      if ask_for_confirmation; then
        exit 0
      fi
    fi
  done

  $action
}

show_menu
