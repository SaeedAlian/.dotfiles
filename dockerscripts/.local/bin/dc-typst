#!/bin/sh

source $HOME/.local/bin/dc-docker-cmd

cmd="$1"
shift

case "$cmd" in
typst)
  docker_cmd run --rm -v "$(pwd):/workspace" dc-typst "$cmd" "$@"
  ;;
shell)
  docker_cmd run --rm -it -v "$(pwd):/workspace" -w /workspace dc-typst /bin/sh
  ;;
*)
  echo "Usage: dc-typst {typst|shell} [args]"
  exit 1
  ;;
esac

exit 0
