# zathura configuration file

# include colors
include colors.conf

# open document in fit-width mode by default
set adjust-open "best-fit"

# one page per row by default
set pages-per-row 1

# disable selection notification on the bottom of screen
set selection-notification false

# enable clipboard
set selection-clipboard clipboard

# scroll settings
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100
set render-loading "false"
set scroll-step 100

# zoom settings
set zoom-min 10

# gui
set guioptions "sv"

# color options and font
set font "JetBrainsMono Nerd Font 14"

set recolor "false"
set recolor-reverse-video "true"
set recolor-keephue "true"

# keybindings

unmap f
unmap =
unmap +

map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
map [presentation] f toggle_fullscreen
map [index] f toggle_fullscreen

map = zoom in
map [fullscreen] = zoom in
map [presentation] = zoom in
map [index] = zoom in

map + zoom best-fit
map [fullscreen] + zoom best-fit
map [presentation] + zoom best-fit
map [index] + zoom best-fit
