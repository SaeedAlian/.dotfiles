############# SXHKDRC #############
###################################
###################################
###################################


######### launchs #########

# terminal
super + Return
  $TERMINAL

# primary notes
super + e
  pnote

# win fzf
super + w
  winfzf

# gui fm
super + shift + Return
  $FILEMANAGER

# calculator
super + shift + q 
  $CALCULATOR

# yad calendar
super + t
  yad_calendar

# vpn
super + shift + v
  $TERMINAL --class "Alacritty-float" -e sudo bash -c "$VPN &"

# webcam
super + shift + control + w
  webcam

# sxiv in wallpapers
super + shift + z
  sxiv $HOME/pictures/wallpapers/walls

######### menus #########

# program launcher
super + d
	rofi -show drun -show-icons

# network menu
super + n
	/bin/bash -c network_menu

# bluetooth menu
super + p
	/bin/bash -c bluetooth_menu

# power menu
super + x
	/bin/bash -c power_menu

# tmux session menu
super + s
  tmux_fzf_session

# tmux session menu with new terminal instance
super + control + s
  tmux_fzf_session -n


######### functions #########

# force run startup script
super + shift + Escape
  startup --force

# screen cast
super + v : {f,v,o,m,k}
  sccast -n {-f,-v,-a -v,-m -v,-k}

# toggle mobile broadband
super + shift + w
  network_menu --cellular-toggle

# toggle bluetooth
super + shift + p
  bluetooth_menu --toggle

# toggle wifi
super + control + w
  network_menu --toggle

# toggle touchpad
super + comma
  toggle_touchpad

# toggle touchscreen
super + period
  toggle_touchscreen

# toggle polybar
super + b
  polybar_visibility -t

# music play/pause
F11
  music_ctrl -t

# music play next
F12
  music_ctrl -n

# music play previous
F10
  music_ctrl -p

# light up
XF86MonBrightnessUp
  set_light -u

# light down
XF86MonBrightnessDown
  set_light -d

# lockscreen
super + shift + x
  start_lockscreen

# volume up
XF86AudioRaiseVolume
  volume -u

# volume dowm
XF86AudioLowerVolume
  volume -d

# volume mute
XF86AudioMute
  volume -m

# microphone mute
XF86AudioMicMute
  microphone -t

# screenshot
Print
  screenshot

# screenshot select
shift + Print
  screenshot -s

# toggle redshift
super + control + r
  toggle_redshift

# dpms off
super + shift + m
  dpms_off

# dpms on
super + shift + n
  dpms_on


######### hotkeys #########

# restart bspwm
super + shift + r
	bspc wm -r; notify-send 'bspwm' 'Reloaded config'

# reload sxhkdrc
super + shift + control + r
    pkill sxhkd 2>/dev/null; sxhkd; notify-send 'sxhkd' 'Reloaded config'

# centerize floating node
super + slash
  $HOME/.config/bspwm/bspfloatcenterize

# close
super + c
	bspc node -c

# kill
super + shift + c
	bspc node -k

# alternate between the tiled and monocle layout
super + f
	$HOME/.config/bspwm/bspfullscreen 

# fullscreen the focused node
super + shift + f
	$HOME/.config/bspwm/bspfullscreen -f

# set the window state
super + space
  $HOME/.config/bspwm/bspfloattoggle

# move the node in the given direction
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

# change the layer of the node
super + {bracketleft,bracketright,backslash}
	bspc node -l {below,above,normal}

# toggle sticky flag
super + shift + s
	$HOME/.config/bspwm/bspstickytoggle

# focus the next/previous node in the current desktop
super + {j,k,grave}
    bspc node -f {prev,next,next}.local.!hidden.window

# focus on the node in the given direction
super + {h,l}
    bspc node -f {west,east}

# focus the last desktop
super + Tab
	bspc desktop -f last

# focus or send to the given desktop
super + {_,shift + }{1-4,7-9,0}
	bspc {desktop -f,node -d} '^{1-4,5-7,8}'

# preselect the direction south
super + minus
	bspc node -p south

# preselect the direction east
super + equal
	bspc node -p east

# cancel the preselection for the focused node
super + Escape
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + shift + {equal,minus}
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# resize windows
super + r : {h,j,k,l,super + h,super + j,super + k,super + l}
  STEP=20; SELECTION={1,2,3,4,5,6,7,8}; \
  bspc node -z $(echo \
    "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0,right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | \
    cut -d',' -f$SELECTION \
  )

# move a floating window
super + m : {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
