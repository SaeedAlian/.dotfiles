############# SXHKDRC #############
###################################
###################################
###################################

######### launchs #########

# terminal
super + Return
  alacritty

# gui fm
super + shift + Return
  pcmanfm-qt

# calculator
super + shift + q 
  qalculate-qt

# yad calendar
super + t
  $HOME/.local/bin/calendar

# vpn
super + shift + v
  pkexec env DISPLAY=$DISPLAY XAUTHORITY=$XAUTHORITY hiddify

######### menus #########

# program launcher
super + d
	rofi -show drun

# network menu
super + w
	/bin/bash -c $HOME/.local/bin/network_menu

# bluetooth menu
super + p
	/bin/bash -c $HOME/.local/bin/bluetooth -m

# power menu
super + x
	/bin/bash -c $HOME/.local/bin/power_menu


######### functions #########

# toggle touchpad
super + comma
  $HOME/.local/bin/toggle_touchpad

# toggle touchscreen
super + period
  $HOME/.local/bin/toggle_touchscreen

# toggle polybar
super + b
  $HOME/.local/bin/polybar_visibility -t

# music play/pause
F11
  $HOME/.local/bin/music -t

# music play next
F12
  $HOME/.local/bin/music -n

# music play previous
F10
  $HOME/.local/bin/music -p

# light up
XF86MonBrightnessUp
  $HOME/.local/bin/light -u

# light down
XF86MonBrightnessDown
  $HOME/.local/bin/light -d

# lockscreen
super + shift + x
  $HOME/.local/bin/start_lockscreen

# volume up
XF86AudioRaiseVolume
  $HOME/.local/bin/volume -u

# volume dowm
XF86AudioLowerVolume
  $HOME/.local/bin/volume -d

# volume mute
XF86AudioMute
  $HOME/.local/bin/volume -m

# microphone mute
XF86AudioMicMute
  $HOME/.local/bin/microphone -m

# screenshot
Print
  $HOME/.local/bin/screenshot

# screenshot select
shift + Print
  $HOME/.local/bin/screenshot -s

# toggle redshift
super + control + r
  $HOME/.local/bin/toggle_redshift

# dpms off
super + shift + m
  $HOME/.local/bin/dpms_off

# dpms on
super + shift + n
  $HOME/.local/bin/dpms_on

######### hotkeys #########

# restart bspwm
super + shift + r
	bspc wm -r; notify-send 'bspwm' 'Reloaded config'

# reload sxhkdrc
super + shift + control + r
    pkill -usr1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'

# close
super + c
	bspc node -c

# alternate between the tiled and monocle layout
super + f
	$HOME/.config/bspwm/bspfullscreen 

# fullscreen the focused node
super + shift + f
	$HOME/.config/bspwm/bspfullscreen -f

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# set the window state
super + shift + w : {t,f}
	bspc node -t {tiled,floating}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + shift + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next node in the current desktop
super + apostrophe
	bspc node -f next.local

# focus the previous node in the current desktop
super + semicolon
	bspc node -f prev.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last desktop
super + Tab
	bspc desktop -f last

# focus or send to the given desktop
super + {_,shift + }{1-7,grave}
	bspc {desktop -f,node -d} '^{1-7,8}'

# preselect the direction south
super + v
	bspc node -p south

# preselect the direction east
super + s
	bspc node -p east

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# resize windows
super + r : {h,j,k,l}
  STEP=20; SELECTION={1,2,3,4}; \
  bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
  bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

# contract a window by moving one of its side inward
super + e : {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + m : {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
